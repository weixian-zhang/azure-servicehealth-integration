{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "lib": [
      "es5", "es6", "dom", "dom.iterable", "es2020", "ESNext", "ES2022"
